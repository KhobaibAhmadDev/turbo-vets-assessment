{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@myorg/data": ["libs/src/lib/data/index.ts"],
      "@myorg/data/*": ["libs/src/lib/data/*"],
      "@myorg/auth": ["libs/src/lib/auth/index.ts"],
      "@myorg/auth/*": ["libs/src/lib/auth/*"]
    }
  }
}
